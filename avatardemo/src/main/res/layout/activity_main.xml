<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_connection">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_Connect"
                android:text="Connect"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_Bind"
                android:text="Bind"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_Disconnect"
                android:text="Disconnect"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_status">


            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Status:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_DroneStatus"
                android:text="not connected"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Battery %: "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_BatteryPercentage"
                android:text="not connected"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="# of satellites:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_GPSSat"
                android:text="not connected"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="Arm"
                android:background="#00FF00"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_Arm"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="DisArm"
                android:background="#FF0000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_Disarm"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="TakeOff"
                android:background="#3399FF"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_Takeoff"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="Land"
                android:background="#00EEFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_Land"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="Emergent Stop"
                android:background="#FFCC99"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_Stop"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="Return"
                android:background="#FFCC00"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_Return"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="GPS"
                android:background="#FFFF00"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_GPS"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="Manual"
                android:background="#FFAAFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_Manual"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avatar Mode: "/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_avatar"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <SeekBar
                android:id="@+id/sb_Throttle"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="30dp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>